ion-view(title="{{vm.item.name}}" has-subheader="true")  ion-content    div.button-bar.button-bar-small      a.button.button-outline.button-option(href="#/tab/menus/menu/{{vm.item.menu._id}}") Menu      button.button.button-outline.button-option(ng-click="vm.reviewItem()") Review      button.button.button-outline.button-option(ng-click="vm.interact('collection', vm.has_collection)", ng-class="{ 'active': vm.has_collection }") Collect      button.button.button-outline.button-option(ng-click="vm.interact('bookmarks', vm.has_bookmarks)", ng-class="{ 'active': vm.has_bookmarks }") Bookmark    ion-list      img.full-image(src='{{vm.item.image}}')      div(id="map_canvas")        google-map(center="vm.map.center" zoom="vm.map.zoom" draggable="false" options="vm.options")          marker(coords="vm.marker.coords" options="vm.marker.options" events="vm.marker.events" idkey="vm.marker.id")      div.button-bar.button-bar-small        button.button.button-light.button-small Photos        button.button.button-light.button-small Reviews    div(class="list card" ng-repeat="photo in vm.photos" style="width:50%;")      div(class="item item-image")        img(src='{{photo.url}}')