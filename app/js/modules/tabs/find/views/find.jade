ion-view(hide-nav-bar="true")

  ion-header-bar.bar-positive.item-input-inset
    button.button.button-clear(ng-click="openModal()") Filter&nbsp&nbsp
    label.item-input-wrapper
      i.icon.ion-ios7-search.placeholder-icon
      input(type="search" placeholder="Search" ng-model="search")
    a.button.button-clear(href="#/tab/map") Map

  ion-content.bg-grey
    ng-single-select(options="options")
    a.menu-card(ng-repeat="item in items | filter:search" href="#/tab/find/item/{{item._id}}")
      div.menu-card-content
        div.item.item-divider {{item.name}}
        img(src='{{item.top_image_url}}')
        div.menu-card-footer {{item.stars}}
