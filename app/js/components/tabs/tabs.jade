    //

        Create tabs with an icon and label, using the tabs-positive style.
        Each tab's child <nav-view> directive will have its own
        navigation history that also transitions its views in and out.
    ion-tabs.tabs-icon-top.tabs-default
      // Pets Tab
      ion-tab(title='Find', icon='icon ion-ios7-search', href='#/tab/find')
        ion-nav-view(name='tab-find')
      // Adopt Tab
      ion-tab(title='Menu', icon='icon ion-ios7-home', href='#/tab/menu')
        ion-nav-view(name='tab-menu')
      // About Tab
      ion-tab(title='Review', icon='icon ion-ios7-camera', href='#/tab/review')
        ion-nav-view(name='tab-review')

      ion-tab(title='List', icon='icon ion-ios7-contact', href='#/tab/list')
        ion-nav-view(name='tab-list')

      ion-tab(title='Options', icon='icon ion-ios7-cog-outline', href='#/tab/options')
        ion-nav-view(name='tab-options')
